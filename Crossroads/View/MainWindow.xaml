<Window x:Class="Crossroads.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crossroads"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" MaxHeight="600" MaxWidth="1000"
        Background="White" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize">
    <Window.Resources>
        <!--Шаблон оформления кнопок в шапке-->
        <ControlTemplate x:Key="TopMenuButtons" TargetType="Button">
            <Grid Name="Btn" Height="40" Margin="20,0,0,0">
                <Border>
                    <Grid>
                        <!--Основной стиль взаимодействия-->
                        <Label Content="{TemplateBinding Content}" Background="Transparent" FontSize="21"
                               VerticalAlignment="Center">
                            <Label.Style>
                                <Style TargetType="Label">
                                    <Setter Property="Foreground" Value="#698AFF"/>
                                    <Style.Triggers>
                                        <!--Цвет при наведении мыши-->
                                        <DataTrigger Binding="{Binding Path=IsMouseOver, ElementName=Btn}"
                                                     Value="True">
                                            <Setter Property="Foreground" Value="Blue"/>
                                        </DataTrigger>
                                        <!--Цвет при нажатии текста кнопки-->
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource
                                            Mode=FindAncestor, AncestorType={x:Type Button}},
                                            Path= IsPressed}" Value="True">
                                            <Setter Property="Foreground" Value="Blue"/>
                                        </DataTrigger>
                                        <!--Выделение текста в фокусе-->
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource
                                            Mode=FindAncestor, AncestorType={x:Type Button}},
                                            Path= IsFocused}" Value="True">
                                            <Setter Property="Foreground" Value="Blue"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Label.Style>
                        </Label>
                        <!--Стиль при выбранной кнопке-->
                        <Label Content="{TemplateBinding Content}" Margin="-3,0,0,0"
                           Background="Transparent" VerticalAlignment="Center" FontSize="21" FontWeight="Bold">
                            <Label.Style>
                                <Style TargetType="Label">
                                    <Setter Property="Foreground" Value="#698AFF"/>
                                    <Setter Property="Visibility" Value="Hidden"/>
                                    <Style.Triggers>
                                        <!--Создания глоу эффекта-->
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource
                                            Mode=FindAncestor, AncestorType={x:Type Button}},
                                            Path= IsFocused}" Value="True">
                                            <DataTrigger.Setters>
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <BlurEffect Radius="35"/>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger.Setters>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Label.Style>
                        </Label>
                    </Grid>
                    <!--Визуальный эффект физич. нажатия кнопки-->
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <!--Создание эффекта физич. нажатия кнопки-->
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource
                                            Mode=FindAncestor, AncestorType={x:Type Button}},
                                            Path= IsPressed}" Value="True">
                                    <Setter Property="Margin"  Value="0,2,0,0"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>
            </Grid>
        </ControlTemplate>
        <!--Шаблон оформления кнопок боковой панели-->
        <ControlTemplate x:Key="SlideMenuButtons" TargetType="Button">
            <Grid Name="Btn" Height="45">
                <Border>
                    <StackPanel Orientation="Horizontal">
                        <!--Оформление расположения иконок-->
                        <Image Source="{DynamicResource ResourceKey=Img}" 
                               VerticalAlignment="Center" HorizontalAlignment="Left" 
                               Height="30" Width="30" Stretch="Fill" Margin="15,0,0,0"/>
                        <Label Content="{TemplateBinding Content}" Background="Transparent" FontSize="23"
                               VerticalAlignment="Center" Margin="10,0,0,0">
                            <Label.Style>
                                <Style TargetType="Label">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <!--Выделение текста при наведении-->
                                        <DataTrigger Binding="{Binding Path=IsMouseOver, ElementName=Btn}"
                                                     Value="True">
                                            <Setter Property="Foreground" Value="Blue"/>
                                        </DataTrigger>
                                        <!--Выделение текста в фокусе-->
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource
                                            Mode=FindAncestor, AncestorType={x:Type Button}},
                                            Path= IsFocused}" Value="True">
                                            <Setter Property="Foreground" Value="Blue"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Label.Style>
                        </Label>
                    </StackPanel>
                </Border>
                <!--Заливка области, когда мышь на кнопке-->
                <Border Name="MouseOverBorder" Background="DarkBlue">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Opacity" Value="0"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=IsMouseOver, ElementName=Btn}" Value="True">
                                    <Setter Property="Opacity" Value="0.15"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>
                <!--Заливка области, когда кнопка выбрана-->
                <Border Name="IsSelectedBorder" Background="DarkBlue">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Opacity" Value="0"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource
                                            Mode=FindAncestor, AncestorType={x:Type Button}},
                                            Path= IsFocused}" Value="True">
                                    <Setter Property="Opacity" Value="0.15"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>
                <!--Создание "закладки" справа-->
                <Border Name="IsSelectedBorder2" Background="Transparent">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Hidden"/>
                            <Setter Property="BorderThickness" Value="3,0,0,0"/>
                            <Setter Property="BorderBrush" Value="AliceBlue"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource
                                            Mode=FindAncestor, AncestorType={x:Type Button}},
                                            Path= IsFocused}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>
            </Grid>
        </ControlTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Name="TopMenu" Grid.Row="0" Grid.ColumnSpan="2">
            <Border BorderThickness="1" BorderBrush="Black" Background="Transparent">
                <StackPanel Orientation="Horizontal">
                    <Button Template="{StaticResource ResourceKey=TopMenuButtons}" Content="ГЛАВНАЯ"/>
                    <Button Template="{StaticResource ResourceKey=TopMenuButtons}" Content="КЛИЕНТЫ"/>
                    <Button Template="{StaticResource ResourceKey=TopMenuButtons}" Content="НОМЕРА"/>
                    <Button Template="{StaticResource ResourceKey=TopMenuButtons}" Content="СОТРУДНИКИ"/>
                    <Button Template="{StaticResource ResourceKey=TopMenuButtons}" Content="ПОДДЕРЖКА"/>
                    <Button Template="{StaticResource ResourceKey=TopMenuButtons}" Content="ПРОФИЛЬ"/>
                    <Button Template="{StaticResource ResourceKey=TopMenuButtons}" Content="ВЫХОД"/>
                </StackPanel>
            </Border>
        </Grid>
        <Grid Name="SlideMenu" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Width" Value="210"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=IsChecked, ElementName=OpenCloseSlideMenuBtn}"
                                                     Value="True">
                            <Setter Property="Width" Value="60"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Border BorderThickness="1,0,1,1" BorderBrush="Black"/>
            <Border BorderThickness="0" Background="Blue" Opacity="0.4"/>
            <StackPanel Orientation="Vertical">
                <Button Template="{StaticResource ResourceKey=SlideMenuButtons}" Content="Главная">
                    <Button.Resources>
                        <ImageSource x:Key="Img">res/icons/icon.bmp</ImageSource>
                    </Button.Resources>
                </Button>
                <Button Template="{StaticResource ResourceKey=SlideMenuButtons}" Content="Главная">
                    <Button.Resources>
                        <ImageSource x:Key="Img">res/icons/icon2.bmp</ImageSource>
                    </Button.Resources>
                </Button>
            </StackPanel>
            <!--Создание кнопки развертывания бокового меню-->
            <ToggleButton x:Name="OpenCloseSlideMenuBtn" Height="20" Width="20" Margin="20,0,0,20"
                          VerticalAlignment="Bottom" HorizontalAlignment="Left"
                          Focusable="False">
                <!--Создание стиля для кнопки развертывания бокового меню-->
                <ToggleButton.Template>
                    <ControlTemplate>
                        <Image>
                            <Image.Style>
                                <!--Смена иконки кнопки в зависимости от положения бокового меню-->
                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="res/icons/close.bmp"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource
                                            Mode=FindAncestor, AncestorType={x:Type ToggleButton}},
                                            Path= IsChecked}" Value="True">
                                            <Setter Property="Source" Value="res/icons/open.bmp"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </ControlTemplate>
                </ToggleButton.Template>
            </ToggleButton>
        </Grid>
    </Grid>
</Window>
